function subMail(i){mail=$("#email_feild").val(),""!=mail?validateEmail(mail)?mail.length<6||mail.length>30?$("#es_msg").text("Email không được quá 30 ký tự!"):$.ajax({url:"https://toidicode.com/api/mail/subscribe",type:"POST",data:{mail:mail,_token:i},success:function(i){200==i.status?$(".es_msg").text(i.message):500==i.status?$(".es_msg").text(i.message):$(".es_msg").text("Có lỗi xảy ra, xin vui lòng thử lại!"),$("#email_feild").val("")},error:function(i){$(".es_msg").text("Có lỗi xảy ra, xin vui lòng thử lại!"),$("#email_feild").val("")}}):$(".es_msg").text("Bạn ơi nhập email cơ mà!"):$(".es_msg").text("Bạn không điền gì sao mình biết")}function validateEmail(i){return/^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/.test(i)}