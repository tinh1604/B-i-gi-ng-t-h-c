jQuery(document).ready(function ($) {
    $(".click-search").click(function (event) {
        event.preventDefault();
        $('.main-search').css('width', 'calc(100% - 85px)');
        $('.main-search form').show()
    });
    $('.click-close').click(function (event) {
        event.preventDefault();
        $('.main-search').css('width', '0');
        $('.main-search form').hide();
        $('#load-data').hide()
    });
    $('#carouselExampleIndicators').carousel({
        interval: 5000
    });
    $(".post-status").click(function (event) {
        $('.detail-status').css({
            'background': 'rgba(0, 0, 0, 0.48)',
            'z-index': '3'
        });
        $('header, .icon-sidebar-r').css({
            'z-index': '2'
        });
        $('.sidebar-right').css({
            'z-index': '1'
        });
        $('.info-status').slideDown(300)
    });
    $(".detail-status").click(function (event) {
        $('.detail-status').css({
            'background': '#ededed',
            'z-index': '-1'
        });
        $('header, .icon-sidebar-r').css({
            'z-index': '9999'
        });
        $('.sidebar-right').css({
            'z-index': '9998'
        });
        $('.info-status').hide(400)
    });
    $('[data-toggle="tooltip"]').tooltip();
    var click = 0;
    $('.icon-sidebar-r').click(function (event) {
        event.preventDefault();
        $('.sidebar-right').toggleClass('right-0').css('z-index', '1001');
        $(this).css('z-index', '1002');
        if (click === 0) {
            $.ajax({
                type: 'POST',
                async: true,
                url: 'https://huykira.net/wp-admin/admin-ajax.php',
                data: {
                    'action': 'Post_Ran'
                },
                beforeSend: function () {
                    $(".img-rand").show()
                },
                success: function (data) {
                    $(".img-rand").hide();
                    $('.load-rand').html(data)
                }
            });
            $.ajax({
                type: 'POST',
                async: true,
                url: 'https://huykira.net/wp-admin/admin-ajax.php',
                data: {
                    'action': 'Post_view'
                },
                beforeSend: function () {
                    $(".img-rand").show()
                },
                success: function (data) {
                    $(".img-rand").hide();
                    $('.load-view').html(data)
                }
            })
        }
        click++
    });
    $(".sidebar-box").resizable({
        resize: function (event, ui) {
            var wh = $(window).innerHeight();
            var thish = $(this).height();
            var sh = wh - thish;
            $('.sidebar-box-nn').css('height', sh + 'px')
        }
    });
    $('.click-noti').click(function (event) {
        event.preventDefault();
        $('.noti-list').slideToggle(200)
    });
    $('.click-acount').click(function (event) {
        event.preventDefault();
        $('.list-acount').slideToggle(200)
    });
    $('#content').click(function () {
        $('.list-acount').fadeOut(200);
        $('.noti-list').fadeOut(200);
        $('#load-data').hide()
    });
    $('.click-social').click(function (event) {
        event.preventDefault();
        setTimeout(function () {
            $('.bay1').slideToggle()
        }, 100);
        setTimeout(function () {
            $('.bay2').slideToggle()
        }, 300);
        setTimeout(function () {
            $('.bay3').slideToggle()
        }, 500);
        setTimeout(function () {
            $('.bay4').slideToggle()
        }, 700);
        setTimeout(function () {
            $('.bay5').slideToggle()
        }, 900);
        setTimeout(function () {
            $('.bay6').slideToggle()
        }, 1100)
    });
    $('.click-login').click(function (event) {
        $('.fade-box').fadeIn(400);
        event.preventDefault()
    });
    $('.close-login').click(function (event) {
        $('.fade-box').fadeOut(400);
        event.preventDefault()
    });
    document.onkeydown = function (e) {
        if (e.keyCode === 27) {
            $('.fade-box').fadeOut(400);
            $('.detail-status').css({
                'background': '#ededed',
                'z-index': '-1'
            });
            $('header').css({
                'z-index': '9999'
            });
            $('.info-status').hide(400)
        }
    };
    $('.click-rong, .sidebar-single h3').click(function (event) {
        event.preventDefault();
        $('.sidebar').removeClass('sidebar-single');
        $('.padding-left-0').removeClass('single-push-2').removeClass('col-lg-10').addClass('col-lg-8 push-3');
        $('.padding-right-30').removeClass('single-pull-8').removeClass('col-lg-2').addClass('col-lg-4 pull-6')
    });
    $('.click-hep').click(function (event) {
        event.preventDefault();
        $('.sidebar').addClass('sidebar-single');
        $('.padding-left-0').removeClass('push-3').removeClass('col-lg-8').addClass('col-lg-10 single-push-2');
        $('.padding-right-30').removeClass('pull-6').removeClass('col-lg-4').addClass('col-lg-2 single-pull-8')
    });
    $('.cmt-avt textarea').click(function () {
        $('.dispay-filed').slideDown(300)
    });
    var timeout = null;

    function call_ajax() {
        var data = $('#searchform').serializeArray();
        $.ajax({
            type: 'POST',
            async: true,
            url: 'https://huykira.net/wp-admin/admin-ajax.php',
            data: {
                'action': 'Post_filters',
                'data': data
            },
            beforeSend: function () {
                $(".img-ahihi").show()
            },
            success: function (data) {
                $(".img-ahihi").hide();
                $('#load-data').show();
                $('#load-data ul').html(data)
            }
        })
    }
    $(".search-ajax").keyup(function () {
        $(".img-ahihi").show();
        clearTimeout(timeout);
        timeout = setTimeout(function () {
            call_ajax()
        }, 500)
    });
    $('.click-cmt').click(function () {
        var id = $(this).data('id');
        $('.content-cmt-hidden input#comment_parent').val(id);
        $('.content-form-cmt').html('');
        $('.reply-cmt-' + id).html($('.content-cmt-hidden').html())
    });
    $("form#commentform").submit(function (event) {
        event.preventDefault();
        var id = $(this).data('id');
        $.ajax({
            type: 'POST',
            url: 'https://huykira.net/wp-admin/admin-ajax.php',
            data: {
                'action': 'Cmt_action',
                'data': $(this).serializeArray()
            },
            beforeSend: function () {
                $('.load-cmt-ahihi').show()
            },
            complete: function () {
                $('.load-cmt-ahihi').hide()
            },
            success: function (data) {
                $('#cmt-ajax-' + id).append(data);
                $('textarea').val('')
            }
        })
    });
    var count = 10;
    $('#more-myblog').click(function () {
        $.ajax({
            type: 'POST',
            url: 'https://huykira.net/wp-admin/admin-ajax.php',
            data: {
                'action': 'Load_action',
                'count': count
            },
            beforeSend: function () {
                $('.ahihi-loadmore').show()
            },
            complete: function () {
                $('.ahihi-loadmore').hide();
                count = count + 5;
                var all = $('#more-myblog').data('id');
                if (count >= all) {
                    $('#more-myblog').hide()
                }
            },
            success: function (data) {
                var new_div = $(data).hide();
                $('.load-more').append(new_div);
                new_div.slideDown()
            },
            error: function (err) {
                console.log(err)
            }
        })
    })
});
$(document).ready(function ($) {
    if (/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)) {} else {
        var offset = $('.fix-ads').offset();
        var hieght_doc = $(document).height();
        var width = $('.get-width').width() + 10;
        var width_single = $('.single-content').height();
        if (width_single > offset.top) {
            $('.sidebar').css({
                'height': width_single+'px',
                'position': 'relative',
            });
            $(window).scroll(function () {
                var width_single = $('.single-content').height();
                $('.sidebar').css({
                    'height': width_single+'px',
                    'position': 'relative',
                });
                var friendbox = $('.friend-box').offset();
                var hieght_ads = $('.fix-ads').height();
                if($(this).scrollTop() > (friendbox.top - hieght_ads - 70)) { 
                    $('.fix-ads').addClass('fix-block-bottom');
                    $('.fix-ads').css('width', width + 'px');
                } else {
                    $('.fix-ads').removeClass('fix-block-bottom');
                }
                if ($(this).scrollTop() > offset.top - 55) {
                    $('.fix-ads').addClass('fix-block');
                    $('.fix-ads').css('width', width + 'px');
                } else {
                    $('.fix-ads').removeClass('fix-block');
                    $('.fix-ads').css('width', 'auto')
                }
                
            })
        }
    }
});
if (HomeNumber === 0) {
    $(document).ready(function ($) {
        $("#lightgallery").lightGallery({
            selector: '.kira'
        });
        $('.kira').click(function (event) {
            $('.tooltip').removeClass('show')
        })
    })
}(function () {
    document.addEventListener("DOMContentLoaded", function () {
        var e = "dmca-badge";
        var t = "refurl";
        if (!document.getElementsByClassName) {
            document.getElementsByClassName = function (e) {
                var t = document.getElementsByTagName("a"),
                    n = [],
                    r = 0,
                    i;
                while (i = t[r++]) {
                    i.className == e ? n[n.length] = i : null
                }
                return n
            }
        }
        var n = document.getElementsByClassName(e);
        if (n[0].getAttribute("href").indexOf("refurl") < 0) {
            for (var r = 0; r < n.length; r++) {
                var i = n[r];
                i.href = i.href + (i.href.indexOf("?") === -1 ? "?" : "&") + t + "=" + document.location
            }
        }
    }, false)
})();
jQuery(document).ready(function ($) {
    $("a.read-contact").click(function (event) {
        event.preventDefault();
        $('html, body').animate({
            scrollTop: $('.contact-section').offset().top
        }, 1000)
    });
    $('.pricing-table a').click(function (event) {
        event.preventDefault();
        var tit = $(this).data('title');
        $('.tieudene').val(tit);
        $('.tieudene').css({
            background: '#ededed',
            color: '#e00'
        })
    });
    $('a.xem-chitiet').click(function (event) {
        event.preventDefault();
        var cao = $(window).height();
        $('.img-product span img').attr('src', $(this).data('img'));
        $('.dungthu-app').attr('href', $(this).data('link'));
        $('.chitiet-app').attr('href', $(this).data('more'));
        $('.title-post-pro-img span').html($(this).data('title'));
        $('.tieudene').val($(this).data('title'));
        $('.tieudene').css({
            background: '#ededed',
            color: '#e00'
        });
        $('.decs').html($(this).data('decs'));
        $('.Price').html($(this).data('price'));
        $('.detail-popup').css({
            visibility: 'visible',
            opacity: '1',
            transform: 'scale(1)',
            'min-height': cao + 'px',
            position: 'relative',
        });
        $('body .wrapper').css({
            position: 'absolute',
            height: cao + 'px',
            overflow: 'hidden'
        })
    });
    $('span.close-popup').click(function (event) {
        $('.detail-popup').css({
            visibility: 'hidden',
            opacity: '0',
            transform: 'scale(0)',
            position: 'fixed',
        });
        $('body .wrapper').css({
            position: 'relative',
            overflow: 'inherit',
            height: 'auto',
        })
    })
});